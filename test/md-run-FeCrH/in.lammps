units		metal
atom_style	atomic

neighbor	0.3 bin
neigh_modify	 every 2 delay 10 check yes

variable	a equal 2.834
lattice		bcc $a
region		box block 0 7 0 7 0 7
create_box	3 box
create_atoms	1 box

mass		1 55.845
mass		2 52.000
mass		3 1.0


#region		vac block 2.85 3.15 2.85 3.15 2.85 3.15
#delete_atoms	region vac
create_atoms	3 single 2.8 2.8 2.8
create_atoms	3 single 3.2 3.2 0.2
create_atoms	3 single 4.2 4.2 4.2

group		solv region box
set		group solv type/fraction 2 0.15 2639

velocity	all create 300.0 8728
timestep	0.0005

pair_style	pace 
pair_coeff	* * ./CrFeH_loworder.yace Fe Cr H


#compute 	pe_at all pe/atom

#dump		snap all cfg 10 ./dump.bcc.*.cfg mass type xs ys zs type
#dump_modify	snap element Fe Cr H


fix 1 all box/relax iso 0.0 vmax 0.001
min_style	cg
thermo 		10
minimize	1.0e-10 1.0e-10 1000 1000

velocity        all create 300 8728
timestep        0.0005
fix		2 all nve

thermo 		10
thermo_style 	custom step etotal pe ke pxx pyy pzz press temp vol
print "Run NVE for 5000 steps"
run		1500
print "DONE"